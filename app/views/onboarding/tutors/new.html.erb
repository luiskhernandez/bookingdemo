<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        Create Your Tutor Profile
      </h2>
      <p class="mt-2 text-center text-sm text-gray-600">
        Start teaching and sharing your knowledge
      </p>
    </div>

    <%= form_with model: @tutor, url: onboarding_tutors_path, local: true, class: "mt-8 space-y-6" do |f| %>
      <% if @tutor.errors.any? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
          <h4 class="font-medium">Please fix the following errors:</h4>
          <ul class="mt-2 list-disc pl-5">
            <% @tutor.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="space-y-4">
        <div>
          <%= f.label :display_name, class: "block text-sm font-medium text-gray-700" %>
          <p class="text-xs text-gray-500 mb-1">How students will see your name</p>
          <%= f.text_field :display_name, required: true,
                           class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500",
                           placeholder: "e.g., Coach Ana, Ms. Smith, Dr. Rodriguez" %>
        </div>

        <div>
          <%= f.label :bio, "Tell us about yourself", class: "block text-sm font-medium text-gray-700" %>
          <p class="text-xs text-gray-500 mb-1">Share your teaching experience and expertise</p>
          <%= f.text_area :bio, rows: 4, required: true,
                          class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500",
                          placeholder: "I'm passionate about mathematics with 5+ years of tutoring experience. I specialize in algebra and calculus..." %>
        </div>

        <div>
          <%= f.label :timezone, class: "block text-sm font-medium text-gray-700" %>
          <p class="text-xs text-gray-500 mb-1">Your local timezone for scheduling</p>
          <%= f.time_zone_select :timezone, nil, 
                                 { default: current_user.timezone },
                                 class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
        </div>
      </div>

      <div class="bg-blue-50 border border-blue-200 rounded-md p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <div class="ml-3">
            <p class="text-sm text-blue-700">
              We'll automatically create a default "Standard Class" (60 minutes) lesson type for you. 
              You can customize this and add more lesson types later.
            </p>
          </div>
        </div>
      </div>

      <div>
        <%= f.submit "Create Tutor Profile", 
                     class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>

    <div class="text-center">
      <%= link_to "Back to Home", root_path, class: "text-indigo-600 hover:text-indigo-500" %>
    </div>
  </div>
</div>
