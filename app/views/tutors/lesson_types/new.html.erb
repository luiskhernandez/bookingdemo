<% content_for :page_title, "Add New Lesson Type" %>
<% content_for :user_name, current_user.tutor.display_name %>
<% content_for :breadcrumbs do %>
  <li>
    <%= link_to tutor_dashboard_path, class: "text-gray-400 hover:text-gray-500" do %>
      Dashboard
    <% end %>
  </li>
  <li class="flex items-center">
    <svg class="flex-shrink-0 h-5 w-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
      <path d="M5.555 17.776l8-16 .894.448-8 16-.894-.448z" />
    </svg>
    <span class="ml-4 text-sm font-medium text-gray-500">Add Lesson Type</span>
  </li>
<% end %>

<div class="min-h-screen bg-gray-50">
  <%= render 'shared/dashboard_header' %>
  
  <main class="max-w-3xl mx-auto py-6 sm:px-6 lg:px-8">
    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-6">Create New Lesson Type</h3>
        
        <%= form_with(model: [@lesson_type], url: tutors_lesson_types_path, local: true, class: "space-y-6") do |form| %>
          <% if @lesson_type.errors.any? %>
            <div class="bg-red-50 border border-red-200 rounded-md p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-red-800">There were errors with your submission:</h3>
                  <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
                    <% @lesson_type.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          <% end %>
          
          <div>
            <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_field :title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500", placeholder: "e.g., Mathematics Tutoring, Python Programming" %>
          </div>
          
          <div>
            <%= form.label :duration_minutes, "Duration (minutes)", class: "block text-sm font-medium text-gray-700" %>
            <%= form.number_field :duration_minutes, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500", placeholder: "60", min: 15, max: 240, step: 15 %>
            <p class="mt-1 text-sm text-gray-500">Duration in minutes (15-240 minutes)</p>
          </div>
          
          <div class="flex items-center">
            <%= form.check_box :active, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
            <%= form.label :active, "Active (visible to students)", class: "ml-2 block text-sm text-gray-900" %>
          </div>
          
          <div class="flex justify-end space-x-3">
            <%= link_to "Cancel", tutor_dashboard_path, class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
            <%= form.submit "Create Lesson Type", class: "bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-4 rounded-md transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          </div>
        <% end %>
      </div>
    </div>
  </main>
</div>